<div class="section">
  <div class="login-form-container">
    <div class="left">
    </div>
     <div class="login-form">
       <%= form_with url: sessions_path, local: true do |f| %>
        <h4>Private Events</h4>
        <p>Welcome Back! Log in to your account to view events:</p>
         <div class="field">
           <div class="control">
             <%= f.text_field :name, class: "input", autofocus: true, placeholder: "Username" %>
           </div>
         </div>
         <div class="field">
           <div class="control">
             <%= f.submit "Log in", class: "button is-primary is-large is-fullwidth" %>
           </div>
         </div>
       <% end %>
       <div class="create-new-account">
          Don't have an account? <%= link_to 'Sign Up', signup_path %>
        </div>
     </div>
  </div>
</div>
