<%= form_with model: user do |f| %>
  <h4>Private Events</h4>
  <p>Welcome! Create an account to view events:</p>
  <div class="field">
    <div class="control">      
      <%= f.text_field :name, class: "input", autofocus: true, placeholder: "Name" %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.submit "Sign Up", class: "button is-primary is-large is-fullwidth" %>
    </div>
  </div>
<% end %>